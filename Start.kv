<Start>:
    canvas.before:
        Color:
            rgb: (0,0,0)
        Rectangle:
            size: self.width , self.height
            pos: self.x, self.y

    Label:
        size_hint: 1, 0.4
        pos_hint: {'x': 0, 'y': 0.6}
        text: "Welcome to our Sudoku\n          Choose level"
        canvas.before:
            Color:
                rgb: (0,0,0)
            Rectangle:
                size: self.width , self.height
                pos: self.x, self.y

    Button:
        size_hint: 1, 0.2
        pos_hint: {'center_x': 0.5, 'y': 0.4}
        background_color: 0,0,0,0
        id : 'easy'
        text: "EASY"
        on_release: root.easy_button_click()

        Image:
            source: 'przycisk1.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y

    Button:
        size_hint: 1, 0.2
        pos_hint: {'center_x': 0.5, 'y': 0.2}
        background_color: 0,0,0,0
        id: 'medium'
        text: "MEDIUM"
        on_release: root.medium_button_click()

        Image:
            source: 'przycisk2.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y

    Button:
        size_hint: 1, 0.2
        pos_hint: {'center_x': 0.5, 'y': 0}
        background_color: 0,0,0,0
        id: 'hard'
        text: "HARD"
        on_release: root.hard_button_click()

        Image:
            source: 'przycisk3.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y