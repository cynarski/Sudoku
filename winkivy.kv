<Loss>:
    canvas.before:
        Color:
            rgb: (0,0,0)
        Rectangle:
            size: self.width , self.height
            pos: self.x, self.y

    Label:
        size_hint: 1, 0.6
        pos_hint: {'x': 0, 'y': 0.4}
        text: "    Unfortunately you loss\nDo you want to play again?"
        font_size: 30
        canvas.before:
            Color:
                rgb: (0,0,0)
            Rectangle:
                size: self.width , self.height
                pos: self.x, self.y

    Label:
        size_hint: 1, 0.1
        pos_hint: {'x': 0, 'y': 0.3}
        text: "If you want to play again click New Game else click Exit"
        font_size: 30
        canvas.before:
            Color:
                rgb: (0,0,0)
            Rectangle:
                size: self.width , self.height
                pos: self.x, self.y

    BoxLayout:
        size_hint: 1, 0.3
        pos_hint: {'x': 0, 'y': 0}
        spacing: 3
        canvas.before:
            Color:
                rgb: (0,0,0)
            Rectangle:
                size: self.width , self.height
                pos: self.x, self.y

        Button:
            text: "New Game"
            font_size: 40
            color: (1,0,0)
            id: "new_game"
            on_release: root.new_game_button_click()
            canvas.before:
                Color:
                    rgb: (0,0,0)
                Rectangle:
                    size: self.width , self.height
                    pos: self.x, self.y

        Button:
            text: "Exit"
            font_size: 40
            color: (1,0,0)
            id: "exit"
            on_release: root.exit_button_click()
            canvas.before:
                Color:
                    rgb: (0,0,0)
                Rectangle:
                    size: self.width , self.height
                    pos: self.x, self.y

